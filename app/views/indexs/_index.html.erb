<h1>投稿一覧</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @lists.each do |list| %>
            <tr>
                <td><%= list.title %></td>
                <td><%= list.body %></td>
                <td><%= link_to 'Show', todolist_path(list.id) %></td>
                <td><%= link_to "Edit", edit_todolist_path(list.id) %></td>
                <td>
                    <div class = "destroy" >
                    <%= link_to 'Destroy', todolist_path(list.id), method: :delete, remote:true %>
                    </div>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>
