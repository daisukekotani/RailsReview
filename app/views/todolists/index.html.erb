
<h1>新規投稿</h1>
<%= form_with model:@list, url:'/todolists', local:true do |f| %>
<h4>タイトル</h4>
<%= f.text_field :title %>
<h4>本文</h4>
<%= f.text_area :body %>
<h4>画像</h4>
<%= f.attachment_field :image %>
<%= f.submit '投稿' %>
<% end %>


<h1>投稿一覧</h1>
<% @lists.each do |list| %>
<p>タイトル</p>
<span>
    <%= link_to list.title, todolist_path(list.id) %>
</span>
<p>画像</p>
  <%= attachment_image_tag list, :image, :fill, 100, 100, format: 'jpeg' %>
<% end %>

