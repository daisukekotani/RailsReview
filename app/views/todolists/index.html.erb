
<h1>新規投稿</h1>
<%= form_with model:@list, url:'/todolists', local:true do |f| %>
<h4>タイトル</h4>
<%= f.text_field :title %>
<h4>本文</h4>
<%= f.text_area :body %>
<!--<h4>画像</h4>-->
<!--<= f.attachment_field :image %>-->
<%= f.submit '投稿' %>
<% end %>


<h1>投稿一覧</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @lists.each do |list| %>
            <tr>
                <td><%= list.title %></td>
                <td><%= list.body %></td>
                <td><%= link_to 'Show', todolist_path(list.id) %></td>
                <td><%= link_to "Edit", edit_todolist_path(list.id) %></td>
                <td><%= link_to 'Destroy', todolist_path(list.id), method: :delete %></td>
            </tr>
        <% end %>
    </tbody>
</table>
